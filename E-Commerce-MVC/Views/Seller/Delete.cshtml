@model E_Commerce_Payment_API.Models.Seller

@{
     ViewData["Title"] = "Delete Profile";
}

@section scripts{
     <script type="text/javascript" src="/wwwroot/js/site.js"></script>
}

<h2 style="color: red;">Do you really wih to delete your profile? You won't be able to retrive it... </h2>

<br>

<div id="editform">
<br>
<div  class="row">
     <dl class="col-md-16 row">
          <form asp-action="Delete">
               <dt class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control-plaintext" aria-disabled="true"/>
               </dt>
               <dt class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control-plaintext" aria-disabled="true"/>
               </dt>
               <dt class="form-group">
                    <label asp-for="Document" class="control-label"></label>
                    <input asp-for="Document" class="form-control-plaintext" aria-disabled="true">
               </dt>
               <dt class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control-plaintext" aria-disabled="true"/>
               </dt>
               <dt class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control-plaintext" aria-disabled="true"/>
               </dt>
          </form>
     </dl>
</div>
</div>

     <form asp-action="Delete" onclick="return confirm('Are you sure you want to delete?');">
     <input id="btnDelete" type="submit" value="Delete" class="btn btn-danger"/>
     </form>


<br>


<a class="nav-link text-light col" asp-area="" asp-controller="Seller" asp-action="SellerActionsPage"><button class="btn btn-secondary">Back</button></a>
