@model E_Commerce_Payment_API.Models.Seller

@{
     ViewData["Title"] = "Create new Seller Account";
}

<h2>Create your profile</h2> 

<div id="registerSellerForm">
<br>
<div  class="row">
     <div class="col-md-16 row">
          <form asp-action="Register">
               <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
               </div>
               <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control"/>
               </div>
               <div class="form-group">
                    <label asp-for="Document" class="control-label"></label>
                    <input asp-for="Document" class="form-control"/>
               </div>
               <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control"/>
               </div>
               <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control"/>
               </div>
               <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-success" onclick="return confirm('Contact succesfully registered!');"/>
               </div>
          </form>
     </div>
</div>
</div>

<a class="nav-link text-light col" asp-area="" asp-controller="Seller" asp-action="SellerActionsPage"><button class="btn btn-secondary">Back</button></a>